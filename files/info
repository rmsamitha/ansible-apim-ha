-- keytool -importkeystore -srckeystore wso2carbon.jks -destkeystore wso2carbon.p12 -deststoretype PKCS12 -storepass wso2carbon
-- openssl pkcs12 -in wso2carbon.p12 -nocerts -nodes > wso2carbon.key

